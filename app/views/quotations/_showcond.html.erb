<%= l= @quotation.condition.length %>

<%= @quotation.condition[3..l] %>


<% for i in 1..l do %>
    <% @quotation.condition[3..l] %>
<%end%>

<% for i in 0..l do %>
    <% if (@quotation.condition[i]=='<' && @quotation.condition[i+1]=='p' && @quotation.condition[i+2]=='>') %>
      <%= i="tag p"%>
    
    <% elsif (@quotation.condition[i]=='<' && @quotation.condition[i+1]=='b' && @quotation.condition[i+2]=='r'&& @quotation.condition[i+5]=='>') %>
      <%= i="tag br" %><br />
    <% else %>
      <%= @quotation.condition[i] %>
    <%end%>
<%end%>