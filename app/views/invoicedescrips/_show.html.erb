<table>
  <tr>
    <th width="350"><center>Description</center></th>
    <th></th>
    <th width="25"><center>Quntity</center></th>
    <th></th>
    <th width="100"><center>Unit Price</center></th>
    <th></th>
    <th width="100"><center>Cost</center></th>
  </tr>

<% @invoice.invoicedescrips.each do |invoicedescrip| %> 
<tr>
  <td width="350"><%= invoicedescrip.description %></td>
  <td></td>
  <td width="25"><center><%= invoicedescrip.quantity %></center></td>
  <td></td>
  <td width="100"><center><%= invoicedescrip.unit_price %>.00</center></td>
  <td></td>
  <td width="100"><center><%= (invoicedescrip.unit_price)*(invoicedescrip.quantity) %>.00</center></td>
<% end %>
</tr>


<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2>Subtotal</font></center></td>
  <td></td>
  <td width="100"><center><font size=2><%= @invoice.subtotal_html %>.00</center></td>
</tr>
<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2>Tax 7%</font></center></td>
  <td></td>
  <td width="100"><center><font size=2><%= @invoice.tax_html %>.00</center></td>
</tr>
<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2><b>Total</b></font></center></td>
  <td></td>
  <td width="100"><center><font size=2><b><%= @invoice.total_html %>.00</b></center></td>
</tr>


</table>
