<table>
  <tr>
    <th width="350"><center>Description</center></th>
    <th></th>
    <th width="25"><center>Quntity</center></th>
    <th></th>
    <th width="100"><center>Unit Price</center></th>
    <th></th>
    <th width="100"><center>Cost</center></th>
  </tr>

<% @bill.billdescrips.each do |billdescrip| %> 
<tr>
  <td width="350"><%= billdescrip.description %></td>
  <td></td>
  <td width="25"><center><%= billdescrip.quantity %></center></td>
  <td></td>
  <td width="100"><center><%= billdescrip.unit_price %>.00</center></td>
  <td></td>
  <td width="100"><center><%= (billdescrip.unit_price)*(billdescrip.quantity) %>.00</center></td>
<% end %>
</tr>

<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2>Subtotal</font></center></td>
  <td></td>
  <td width="100"><center><font size=2><%= @bill.subtotal_html %>.00</center></td>
</tr>
<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2>Tax 7%</font></center></td>
  <td></td>
  <td width="100"><center><font size=2><%= @bill.tax_html %>.00</center></td>
</tr>
<tr>
  <td width="350"></td>
  <td></td>
  <td width="25"></td>
  <td></td>
  <td width="100"><center><font size=2><b>Total</b></font></center></td>
  <td></td>
  <td width="100"><center><font size=2><b><%= @bill.total_html %>.00</b></center></td>
</tr>

</table>
