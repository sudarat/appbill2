<h1>Edit description</h1>

<% flash .each do |key, value| %>
  <% if value ==  "Description Error." %>
  <%= content_tag(:div, value, :class => "descrip") %>
  <% else %>
  <%= content_tag(:div, value, :class => "flash #{key}") %> 
  <% end %>
<% end %>

<%= form_for([@customer,@bill, @billdescrip]) do |billd|  %>
  <div class="field">
    <%= billd.label :description %><br /> 
    <%= billd.text_field :description %><b><font color=red>&nbsp;*</font></b>
  </div>
  <div class="field">
    <%= billd.label :quantity %><br /> 
    <%= billd.text_field :quantity %><b><font color=red>&nbsp;*</font></b>
  </div>
  <div class="field">
    <%= billd.label :unit_price %><br /> 
    <%= billd.text_field :unit_price %><b><font color=red>&nbsp;*</font></b>
  </div>


  <div class="actions">
    <%= billd.submit %>
  </div>
<% end %>

<% cookies[:back] = request.referer %>
<%= link_to back, cookies[:back],:format => "html" %>