<html>
<h1 align = center>Tax invoices</h1>

<% flash .each do |key, value| %>
  <%= content_tag(:div, value, :class => "flash #{key}") %> 
<% end %>

<%= link_to newbill, newbills_path,:format => "html" , :class => "right"%>
<table>
  <tr>
    <th width="5%">No.</th>
    <th></th>
    <th width="30%">Customer</th>
    <th></th>
    <th width="35%">Title</th>
    <th></th>
    <th width="20%"></th>
  </tr>

<% @bills.each do |b| %>
  <tr>
    <td><%= b.id%>-<%= (b.created_at.year)+543 %></td>
    <td></td>
    <td><%= b.customer.name%></td>
    <td></td>
    <td ><%= b.title %></td>
    <td></td>
    <td><%= link_to delete, [b.customer , b ],:format => "html",:confirm => "Are you sure?" ,:method => :delete , :class => "right"%>
    <div class = "right">|</div>
    <%= link_to edit, edit_customer_bill_path(b.customer, b),:format => "html" , :class => "right"%>
    <div class = "right">|</div>
    <%= link_to show, ([b.customer, b]),:format => "html" , :class => "right"%>
    </td>
  </tr>
<% end %>
</table>
</html>
